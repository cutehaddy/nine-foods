<LandingPage>:
    MDFloatLayout:
        NineBackgroung:
        MDFloatingActionButton:
            pos_hint: {'right': .95, 'top': 0.15}
            icon: 'chef-hat'
            elevation: 12
            on_release: app.change_screen('home')
        NineMidText:
            text: 'Nine Foods'
            pos_hint: {'center_y': .9, 'center_x': .5}
            padding: ('10dp', '10dp')   
            halign: 'center'
            theme_text_color: 'Custom'
            text_color: [1, 1, 1, 1]
            md_bg_color: app.theme_cls.primary_color
            size_hint_x: None
            width: self.text_size[0]
            multiline: False
        NineBigText:
            text: 'Make your own food,'
            pos_hint: {'center_y': .6}
            padding: ('10dp', '10dp')
            halign: 'center'
        NineBigText:
            text: 'At home.'
            pos_hint: {'center_y': .5}
            color: app.theme_cls.primary_color
            halign: 'center'            

<NineText@MDLabel>:
    size_hint_y: None
    height: self.texture_size[1]

<NineBigText@NineText>:
    font_size: '28pt'
    bold: True
    padding: ('10dp', '10dp')

<NineMidText@NineText>:
    font_size: '18pt'
    bold: True

<NineSmallText@NineText>:
    font_size: '14pt'
    bold: True

<NineXSmallText@NineText>:
    font_size: '10pt'
    bold: True

<NineBackgroung@FitImage>:
    source: 'img/bg.png'

<NineHeader@MDBoxLayout>:
    height: '50dp'
    size_hint_y: None
    text: ''
    icon: ''
    NineMidText:
        text: root.text
        padding: ('10dp', '10dp')
    MDIconButton:
        icon: root.icon

<NineTab>:
    app: app
    height: '40dp'
    size_hint_y: None

<NineTabItem>:
    rows: 2
    text: ''
    size_hint_x: None
    padding: '5dp'
    icon: ''
    text_color: app.theme_cls.opposite_bg_normal
    bold: False
    MDLabel:
        text: root.text
        bold: root.bold
        halign:'center'
        theme_text_color: 'Custom'
        text_color: root.text_color
    MDIcon: 
        theme_text_color: 'Custom'
        halign:'center'
        icon: root.icon
        font_size: '12pt'
        text_color: root.text_color