<RecipeCard>:
    source: ''
    size_hint_y: None
    height: '200dp'
    radius: ('20dp', )
    elevation: 12
    cuisine: ''
    food_name: ''
    orientation: 'vertical'
    padding: ('5dp', '5dp')
    spacing: '15dp'
    time: ''
    MDFloatLayout:
        FitImage:
            source: root.source
            radius: root.radius
            pos_hint: {'center_x':.5, 'center_y':.5}
        NineTime:
            pos_hint: {'center_x':.3, 'center_y':.85}
            time: root.time

    MDBoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        adaptive_height: True
        NineXSmallText:
            text: root.food_name
            shorten_from: 'right'
            shorten: True
            padding: ('8dp', '0dp')
        NineXSmallText:
            text: root.cuisine
            padding: ('8dp', '2dp')
            color: app.gray

<NineTime@MDBoxLayout>:
    size_hint_x: None
    adaptive_height: True
    height: '20dp'
    width: icon.width + time.width + 5
    radius: ('10dp')
    icon: 'clock-outline'
    time: ''
    md_bg_color: [0, 0, 0, .5]
    padding: ('5dp', '5dp')
    spacing: '5dp'
    MDIcon:
        id: icon
        icon: root.icon
        font_size: '11pt'
        theme_text_color: 'Custom'
        text_color: [1, 1, 1, 1]
        pos_hint: {'center_y':.5}
        valign: 'center'
        size_hint_x: None
        width: self.texture_size[0]        
    NineXSmallText:
        id: time
        text: root.time
        font_size: '9pt'
        width: '50dp'
        size_hint_x: None
        theme_text_color: 'Custom'
        text_color: [1, 1, 1, 1]
        bold: True